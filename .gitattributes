# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.gitattributes text eol=lf
*.gitignore text eol=lf
*.gitkeep text eol=lf

# Denote all files that are truly binary and should not be modified
*.pyd binary
*.dll binary
*.so binary
*.dylib binary
*.whl binary
*.egg binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary
*.gz binary
*.bz2 binary
*.xz binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.pdf binary
